# Clave privada del servidor.
# En caso de rotarla, se puede especificar la anterior como fallback para mantener la validez de las sesiones.
SECRET_KEY=
SECRET_KEY_FALLBACK=

# Host de la página principal del evento
HOST_LANDING=
# Host de este servidor
HOST_REGISTRO=

# Fechas de inicio y fin del evento.
FECHA_INICIO_EVENTO=
FECHA_FIN_EVENTO=
# Fecha del cierre del registro
FECHA_FIN_REGISTRO=

# Correos a los administradores
NOMBRE_ADMIN=
MAIL_ADMIN=
# Correo usado en los mensajes a los adminsitradores
SERVER_EMAIL=

# Ajustes de correo generales
EMAIL_HOST=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Valor de la cabecera FROM de los correos enviados.
# Puede ser solo el correo o bien "Nombre <correo@dominio.tld>"
DEFAULT_FROM_EMAIL=

# PassKit
# Requerido:
PASSKIT_TEAM_ID=
PASSKIT_PASS_TYPE_ID=
PASSKIT_WWDR_CERT_PATH=

# Certificados (usar uno de los dos métodos):
# Método 1: P12
PASSKIT_CERT_P12_PATH=
PASSKIT_CERT_P12_PASSWORD=
# Método 2: PEM
# Usar rutas absolutas en servidor: /etc/hackudc/certs/pass.pem
PASSKIT_CERT_PATH=
PASSKIT_KEY_PATH=
PASSKIT_CERT_PASSWORD=

# Opcional:
# URL pública para poder usar la API de actualización de pases
# Ejemplo: https://registro.hackudc.com/api/pkpass/update/
# No hemos configurado nada en esta parte, pero igual es buena idea por si
# queremos enviar push notifications o actualizar info de forma dinámica
PASSKIT_WEB_SERVICE_URL= 
